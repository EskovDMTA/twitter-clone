<div class="container py-5", style="max-width: 540px">
  <h2>Set you profile</h2>

  <%= form_with model: current_user, local: true, url: username_path(current_user) do |f| %>
  <div class="mb-3">
  	<%= f.label :username, class: "form-label"%>
  	<%= f.text_field :username, class: "form-control mb-3"%>

    <%= f.label :display_name, class: "form-label"%>
  	<%= f.text_field :display_name, class: "form-control mb-3"%>

    <%= f.label :avatar, class: "form-label"%>
    <%= f.file_field :avatar, class: "form-control mb-3" %>
  </div>
  <%= f.submit "Update profile", class: "btn btn-primary btn-lg"%>
  <% end %>
</div>