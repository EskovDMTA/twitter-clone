	<%= form_with model: Tweet.new, url: tweets_path, local: true  do |f| %>
		<%= f.text_field :body %>
		<%= f.submit "Create tweet", class: "btn btn-primary btn-lg" %>
	<% end %>

	<%= Tweet.find_each do |tweet| %>
		<%= tweet.body %>
	<% end %>

